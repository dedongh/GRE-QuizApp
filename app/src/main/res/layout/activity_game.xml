<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_400"
    tools:context=".Activity.GameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Instructions go here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:id="@+id/game_main_instructions"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="45sp"
        android:text="Main Word"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_main_instructions"
        app:layout_constraintBottom_toTopOf="@+id/game_main_answers"
        android:layout_marginTop="60dp"
        android:id="@+id/game_main_mainWord"
        />


    <LinearLayout
        android:id="@+id/game_main_answers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/game_main_mainWord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="85dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:id="@+id/game_main_option1"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Option 1"
            android:background="@color/white"
            android:textColor="@color/green_900"
            android:elevation="4dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:id="@+id/vocabulary_gameOption"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Option 2"
            android:background="@color/white"
            android:textColor="@color/green_900"
            android:elevation="4dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="90dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/game_main_answers"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:text="Skip  >>"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/game_main_skip_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>